<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white_gray"
    android:orientation="vertical" >

    <!-- android:clickable="true"  组合控件不能设置该属性为true,否则接收不到点击事件！！！ -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_uiitem"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_tvLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingLeft="12dp"
            android:text="wdjfj" />

        <TextView
            android:id="@+id/item_tvLeft1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_tvRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:gravity="right"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:src="@drawable/icon_arrow" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_line"
        style="@style/line_horizontal"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp" />

</LinearLayout>